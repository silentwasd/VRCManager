<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:WorldManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
             x:Class="WorldManager.Views.SavedSelectionView">

    <Design.DataContext>
        <viewModels:SavedSelectionViewModel />
    </Design.DataContext>

    <StackPanel Margin="10" Spacing="10">
        <Image Source="{Binding Item.Thumbnail}" />

        <TextBlock FontSize="24"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   Text="{Binding Item.World.Name}" />

        <Button HorizontalAlignment="Stretch"
                Content="Скопировать название"
                Command="{Binding CopyName}" />

        <DockPanel>
            <Button DockPanel.Dock="Left"
                    Margin="0, 0, 10, 0"
                    HorizontalAlignment="Stretch"
                    Content="Изменить группу"
                    Command="{Binding SetGroup}" />

            <TextBox Text="{Binding NewGroup}" />
        </DockPanel>

        <Button HorizontalAlignment="Stretch"
                Content="Удалить"
                Command="{Binding Remove}" />
    </StackPanel>

</UserControl>